<h4 style="padding-left: .5em;">Welcome, {{name}}</h4>
{{#if allUsers}}
<table class="striped">
    <thead>
        <tr>
            <th>Image</th>
            <th>Google ID</th>
            <th>Display Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Role ID</th>
            <th>Biography</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each allUsers}}
            <tr>
                <td><img src="{{image}}" alt="Image for {{firstName}}" style="max-height: 50px;"></td>
                <td><a href="/users/{{googleId}}">{{googleId}}</a></td>
                <td>{{displayName}}</td>
                <td>{{firstName}}</td>
                <td>{{lastName}}</td>
                <td>{{roleId}}</td>
                <td>{{biography}}</td>

                <td>
                    <form action="/users/{{googleId}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn red">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{/if}}
